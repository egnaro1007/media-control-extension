{
  "manifest_version": 2,
  "name": "Media Session Metadata Display",
  "version": "1.0",
  "description": "Displays MediaSession.metadata of currently playing content.",
  "permissions": [
    "<all_urls>",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "media-control@egnaro.me"
    }
  }
}
