{
  "manifest_version": 2,
  "name": "Media Control",
  "version": "1.0",
  "description": "Displays MediaSession.metadata of currently playing content.",
  "permissions": [
    "<all_urls>",
    "tabs"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_16.png",
      "32": "icons/icon_32.png",
      "64": "icons/icon_64.png"
    }
  },
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "64": "icons/icon_64.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "media-control@egnaro.me"
    }
  }
}
